<% layout("/layouts/boilerplate.ejs") %>

    <style>
        .filters::-webkit-scrollbar {
            display: none;
            /* For Chrome, Safari, Edge, and other WebKit-based browsers */
        }

        .filter {
            opacity: 0.7;
            cursor: pointer;
        }

        .filter:hover {
            opacity: 1;
        }

        .filter span {
            font-size: 11px;
        }

        .tax-toggle {
            border-radius: 10px;
            padding: 4px 10px;
        }
    </style>

    <body>
        <!-- <h3>AllListings</h3> -->
        <div class="filters d-flex mt-3 mb-3 overflow-auto">
            <div class="filter d-flex flex-column align-items-center me-5">
                <i class="fa-solid fa-fire"></i>
                <span>Tranding</span>
            </div>
            <div class="filter d-flex flex-column align-items-center me-5">
                <i class="fa-solid fa-bed"></i>
                <span>Rooms</span>
            </div>
            <div class="filter d-flex flex-column align-items-center me-5">
                <i class="fa-solid fa-mountain-city"></i>
                <span>Iconic Cities</span>
            </div>
            <div class="filter d-flex flex-column align-items-center me-5">
                <i class="fa-solid fa-mountain"></i>
                <span>Mountains</span>
            </div>
            <div class="filter d-flex flex-column align-items-center me-5">
                <i class="fa-brands fa-fort-awesome"></i>
                <span>Castles</span>
            </div>
            <div class="filter d-flex flex-column align-items-center me-5">
                <i class="fa-solid fa-person-swimming"></i>
                <span>Amazing Pools</span>
            </div>
            <div class="filter d-flex flex-column align-items-center me-5">
                <i class="fa-solid fa-campground"></i>
                <span>Camping</span>
            </div>
            <div class="filter d-flex flex-column align-items-center me-5">
                <i class="fa-solid fa-cow"></i>
                <span>Farms</span>
            </div>
            <div class="filter d-flex flex-column align-items-center me-5">
                <i class="fa-regular fa-snowflake"></i>
                <span>Arctic</span>
            </div>

            <div class="tax-toggle border">
                <div class="form-check-reverse form-switch d-flex">
                    <label class="form-check-label flex-shrink-0" for="flexSwitchCheckDefault">Display total after
                        Taxes</label>
                    <input class="form-check-input ms-3" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                </div>
            </div>
        </div>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let listing of allListings) { %>
                <a href="/listings/<%= listing._id %>">
                    <div class="card col listingCard">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-img"
                            style="height : 20rem">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b> <br>
                                &#x20b9; <%= listing.price.toLocaleString("en-IN") %> / night
                                    <i class="tax" style="visibility: hidden;">&nbsp; &nbsp; +18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>
    </body>

    <script>
        let taxSwitch = document.querySelector("#flexSwitchCheckDefault");
        let taxes = document.querySelectorAll(".tax");

        for (let tax of taxes) {
            taxSwitch.addEventListener("change", () => {
                if(tax.style.visibility === 'hidden') {
                    // tax.style.display = 'inline';
                    tax.style.visibility = 'visible';
                } else {
                    // tax.style.display = 'none';
                    tax.style.visibility = 'hidden';
                }
            })
        }
    </script>