<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">

            <div class="col-8 offset-2">
                <h3>Listing Details : </h3>
            </div>
            <div class="card col-6 show-card">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing-img">
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b><br>
                        <%= listing.description %><br>
                        &#x20b9; <%= listing.price.toLocaleString("en-IN") %><br>
                        <%= listing.location %><br>
                        <%= listing.country %><br>
                    </p>
                </div>
            </div>
        </div>
        <div class="btns offset-3">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark add-btn">Edit</a>
            <br><br>
            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark">Delete</button>
            </form>
        </div>
    </body>