<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login on Wonderlust</h1>
    <br>
    <div class="col-6 offset-3">
        <form method="post" action="/login" class="needs-validation" novalidate>
            <div>
                <label for="username" class="form-label">Username</label>
                <input name="username" type="text" placeholder="Username" class="form-control" id="username" required>
            </div>
            
            <div>
                <label for="password" class="form-label">Password</label>
                <input name="password" type="password" placeholder="Password" class="form-control" id="password" required>
            </div>
            
            <br>
            <button  class="btn btn-success">Login</button>
            <br><br>
        </form>
    </div>
</div>