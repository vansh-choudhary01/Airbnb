<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on Wonderlust</h1>
    <br>
    <div class="col-6 offset-3">
        <form method="post" action="/signup" class="needs-validation" novalidate>
            <div>
                <label for="username" class="form-label">Username</label>
                <input name="username" type="text" placeholder="Username" class="form-control" id="username" required>
                <div class="valid-feedback">looks good</div>
                <div class="invalid-feedback">Please enter username</div>
            </div>
            
            <div>
                <label for="email" class="form-label">Email</label>
                <input name="email" type="text" placeholder="Email" class="form-control" id="email" required>
                <div class="valid-feedback">looks good</div>
                <div class="invalid-feedback">Please enter email</div>
            </div>

            <div>
                <label for="password" class="form-label">Password</label>
                <input name="password" type="password" placeholder="Password" class="form-control" id="password" required>
                <div class="valid-feedback">looks good</div>
                <div class="invalid-feedback">Please enter password</div>
            </div>
            
            <br>
            <button  class="btn btn-success">SignUp</button>
            <br><br>
        </form>
    </div>
</div>